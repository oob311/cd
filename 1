#include <stdio.h>
#include <ctype.h>
int main() {
 char ch;
 FILE *fp = fopen("input.c", "r"); 
 if (!fp) {
 printf("Error opening file.\n");
 return 1;
 }
 while ((ch = fgetc(fp)) != EOF) {
 if (isalpha(ch)) { 
 printf("Identifier: %c\n", ch);
 }
 else if (isdigit(ch)) { 
 printf("Constant: %c\n", ch);
 }
 else if (ch == '/' && (ch = fgetc(fp)) == '/') { 
 printf("Comment: //...\n");
 while ((ch = fgetc(fp)) != '\n');
 }
 else if (ch == '+' || ch == '-' || ch == '*' || ch == '/' || ch == '=') { 
 printf("Operator: %c\n", ch);
 }
 }
 fclose(fp); // Close the file
 return 0;
}

/*
Sample input.c
int a = 10;
// simple comment
a = a + 1;
*/
